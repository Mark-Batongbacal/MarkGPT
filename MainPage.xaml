<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarkGPT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarkGPT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light">
    <Grid Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" Padding="12">
            <StackPanel x:Name="ChatStack" Spacing="12" Background="#2C2C2C" Padding="10">

            </StackPanel>
        </ScrollViewer>


        <Grid Grid.Row="2" Padding="12" Background="#333333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox"
     Background="White"
     Grid.Column="1"
     PlaceholderText="Type your message..."
     MinHeight="40"
     Width="400"
     TextWrapping="Wrap"
     AcceptsReturn="True"
     VerticalAlignment="Center"
     Margin="0,0,8,0">
                <TextBox.Resources>
                    <SolidColorBrush x:Key="TextBoxBackground" Color="Black"/>
                    <SolidColorBrush x:Key="TextBoxBackgroundPointerOver" Color="Gray"/>
                    <SolidColorBrush x:Key="TextBoxBackgroundFocused" Color="DarkGray"/>
                </TextBox.Resources>
            </TextBox>

            <Button Grid.Column="2" 
    Background="White"
    Content="Send" 
    VerticalAlignment="Center"
    Click="Send_Click"/>
        </Grid>
    </Grid>
</Page>
